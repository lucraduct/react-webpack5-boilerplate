{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "linebreak-style": ["error", "windows"],
    "semi": ["error", "always"]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "17.0.1"
    }
  }
}
